<h1>Articles#show</h1>
<p>Find me in app/views/articles/show.html.erb</p>

<h1><%= @article.title %></h1>
<p><%= @article.content %></p>

<%= link_to edit_article_path(@article) do %>
  <p><i class="fa-regular fa-pen-to-square"></i></p>
<% end %>

<%= link_to article_path(@article), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } do %>
  <p><i class="fa-solid fa-trash"></i></p>
<% end %>

<%= link_to "Back", articles_path %>
